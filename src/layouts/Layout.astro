---
import { siteConfig } from "@/config";

interface Props {
  title: string;
  description?: string;
}
const { title, description } = Astro.props;

const htmlTitle = title ? `${title} - ${siteConfig.title}` : siteConfig.title;
---

<!doctype html>
<html lang="zh-Hant">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description || htmlTitle} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{htmlTitle}</title>
    <slot name="head"></slot>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --font-primary: "Fira Sans", sans-serif;
    --font-secondary: "Libre Baskerville", serif;
    --color-accent: #52768e;
    --color-background-main: #222426;
    --color-background-secondary: #1d1f20;
    --color-background-contrast: #3b3d40;
    --color-background-overlay: rgba(9, 10, 13, 0.9);
    --color-content-lead: #fff;
    --color-content-main: #e1e3e6;
    --color-content-secondary: #909499;
  }
  html {
    display: block;
    font-family: "Fira Sans", sans-serif;
    background: var(--color-background-main);
  }
  body {
    margin: 0;
    color: var(--color-content-main);
    font-family: var(--font-primary);
    font-weight: 400;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  .content {
    margin: 0 auto;
    padding: 0 5rem;
    max-width: calc(40rem + 8vw);
  }
  .header-box {
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--color-background-contrast);
  }
