---
interface Props {
  customPath?: string;
}
const { customPath } = Astro.props;

import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import {bannerConfig} from "@/config";
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/Cover/**/*.{jpeg,jpg,png,gif,svg}');
const currentPath = Astro.url.pathname;
const banner = customPath ? bannerConfig[customPath] : bannerConfig[currentPath];
---
<header class:list={["main-header", {"has-cover": banner}]}>
  <div class="content">
    <div class="header-box">
      <slot />
    </div>
    {
      banner && 
      <div class="main-cover">
        <Image src={images[banner]()} alt=""/>
      </div>
    }
  </div>
</header>

<style>
  .main-header {
    padding-top: calc(10rem + 4vw);
    position: relative;
  }
  .has-cover {
    padding-top: calc(15rem + 8vw);
    background: black;
  }
  .has-cover .header-box{
    border: none;
  }
  .main-cover {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 5;
    background: no-repeat scroll center center / cover #222426;
    animation: 0.3s ease-in forwards fadein;
    display: flex;
    align-items: center;
  }

  .main-cover::after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.333) 100%
    );
  }
  .main-cover img {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
