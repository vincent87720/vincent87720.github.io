---
import { Image } from "astro:assets";

interface Props {
  bannerImage?: any;
}

const { bannerImage } = Astro.props;
---

<header class:list={["main-header", { "has-cover": bannerImage }]}>
  <div class="content">
    <div class="header-box">
      <slot />
    </div>
    {
      bannerImage && 
        <div class="main-cover">
        <Image src={bannerImage.src} alt="" width={bannerImage.attributes.width} height={bannerImage.attributes.height} />
        </div>
    }
  </div>
</header>

<style>
  .main-header {
    padding: calc(10rem + 8vw) 0 calc(2.5rem + 6vw);
    position: relative;
  }
  .has-cover {
    padding-top: calc(10rem + 8vw);
    background: black;
  }
  .has-cover .header-box {
    padding: 0;
    border: none;
  }
  .main-cover {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 5;
    background: no-repeat scroll center center / cover #222426;
    animation: 0.3s ease-in forwards fadein;
    display: flex;
    align-items: center;
  }

  .main-cover::after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.333) 100%
    );
  }
  .main-cover img {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
