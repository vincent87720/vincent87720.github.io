---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div class="box-info">
  <h1 class="box-title">{title}</h1>
</div>
<style>
  .box-info {
    position: relative;
    display: flex;
    padding-bottom: calc(2rem + 2vw);
    z-index: 1024;
  }
  .box-title {
    font-size: 2.5rem;
    margin: 1.65rem 0;
  }
</style>
